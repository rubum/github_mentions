<section class="phx-hero">
  <h2 class="text-success"><b>GithubMentions</b></h2>

  <div class="mt-5 pt-4">
    <%= if not is_signed_in?(@conn) do %>
      <p>You've been logged out. Login to your GitHub Account: <p>
      <a href="<%= @oauth_github_url %>">
        <img src="https://i.imgur.com/qwoHBIZ.png" alt="Sign in with GitHub" height="40"/>
      </a>
    <% else %>
      <a href="/profile" class="btn btn-lg btn-success mb-5 mt-1">Go Back In</a>
    <% end %>
  </div>
</section>